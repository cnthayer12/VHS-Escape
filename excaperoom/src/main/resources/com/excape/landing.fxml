      <Button id="btnLogin" fx:id="btnLogin" onAction="#switchToLogin" prefHeight="26.0" prefWidth="101.0" text="Login" />
      <Button fx:id="btnCreateAcc" onAction="#switchToCreateAcc" prefHeight="26.0" prefWidth="103.0" text="Create Account" />
      <Button fx:id="btnLeaderboard" onAction="#switchToLeaderboard" prefHeight="26.0" prefWidth="103.0" text="Leaderboard" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>
