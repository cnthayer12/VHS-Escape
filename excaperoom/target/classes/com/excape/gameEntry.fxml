<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.excape.GameEntryController">
   <children>
      <StackPane>
         <children>
            <ImageView blendMode="SRC_ATOP" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/wp4585522.jpg" />
               </image>
               <viewport>
                  <Rectangle2D />
               </viewport>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </ImageView>
            <ImageView fitHeight="412.0" fitWidth="412.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/vhsIcon.png" />
               </image>
               <StackPane.margin>
                  <Insets top="400.0" />
               </StackPane.margin>
            </ImageView>
            <Button fx:id="enterButton" mnemonicParsing="false" onAction="#switchToDifficulty" prefHeight="32.0" prefWidth="128.0" text="Enter Game">
               <font>
                  <Font size="19.0" />
               </font>
               <StackPane.margin>
                  <Insets top="550.0" />
               </StackPane.margin>
            </Button>
            <Label styleClass="lblMedium" stylesheets="@styles.css" text="Your fate awates. Press Enter Game to step inside.">
               <StackPane.margin>
                  <Insets bottom="505.0" />
               </StackPane.margin>
            </Label>
            <Label fx:id="lblEntry" prefHeight="110.0" prefWidth="1219.0" stylesheets="@styles.css" text="You have come across a mysterious VHS tape..." textFill="WHITE">
               <StackPane.margin>
                  <Insets bottom="630.0" left="30.0" />
               </StackPane.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </children>
</VBox>
